generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario Int      @id @default(autoincrement())
  user       String
  password   String
  rol        Rol
}

enum Rol {
  ADMIN
  MESERO
  COCINERO
}

model Mesa {
  id_mesa    Int     @id @default(autoincrement())
  num_mesa   Int
  estado     EstadoMesa
  capacidad  Int
  ordenes    Orden[]
}

enum EstadoMesa {
  OCUPADO
  DISPONIBLE
}

model Orden {
  id_orden      Int           @id @default(autoincrement())
  fecha         DateTime
  estado        EstadoOrden
  nombre_cliente String
  mesero        Mesero        @relation(fields: [mesero_id], references: [id_mesero])
  mesero_id     Int
  mesa          Mesa          @relation(fields: [mesa_id], references: [id_mesa])
  mesa_id       Int
  detalleOrden  DetalleOrden[]
  factura       Factura?
}

enum EstadoOrden {
  POR_PAGAR
  CANCELADO
}

model Mesero {
  id_mesero Int     @id @default(autoincrement())
  nombre    String
  ordenes   Orden[]
}

model DetalleOrden {
  id_detalle_orden Int           @id @default(autoincrement())
  orden           Orden          @relation(fields: [orden_id], references: [id_orden])
  orden_id        Int
  platillo        Platillo       @relation(fields: [platillo_id], references: [id_platillos])
  platillo_id     Int
  cantidad        Int
  subtotal        Float
  estado          EstadoDetalleOrden
}

enum EstadoDetalleOrden {
  EN_PREPARACION
  LISTO
}

model Factura {
  id_factura Int     @id @default(autoincrement())
  orden      Orden   @relation(fields: [orden_id], references: [id_orden])
  orden_id   Int @unique
  subtotal   Float
  propina    Float
  total      Float
}

model Inventario {
  id_inventario     Int     @id @default(autoincrement())
  platillo          Platillo @relation(fields: [platillo_id], references: [id_platillos])
  platillo_id       Int
  cantidad_disponible Int
}

model Platillo {
  id_platillos Int     @id @default(autoincrement())
  nombre       String
  precio       Float
  tipo         TipoPlatillo
  detalles     DetalleOrden[]
  inventario   Inventario[]
}

enum TipoPlatillo {
  COMIDA
  BEBIDA
}